---
interface Props {
    product: {
        id: number;
        name: string;
        price: number;
        image_url?: string; // We'll handle images properly later, assuming relation or separate query
        is_offer: boolean;
        category?: {
            name: string;
            slug: string;
        };
        stock?: Array<{ quantity: number }> | { quantity: number };
    };
    loading?: "lazy" | "eager";
}

import { Image } from "astro:assets";

const { product, loading = "lazy" } = Astro.props;

const cleanUrl = (url?: string) => {
    if (url && url.includes("?")) {
        return url.split("?")[0];
    }
    return url;
};

const image: string =
    cleanUrl(
        product.image_url ||
            "https://images.unsplash.com/photo-1620916566398-39f1143ab7be",
    ) || "";

const formatPrice = (price: number) => {
    return new Intl.NumberFormat("es-ES", {
        style: "currency",
        currency: "EUR",
    }).format(price / 100);
};
---

<div
    data-product={JSON.stringify(product)}
    class="product-card-trigger cursor-pointer group transition-all duration-700 block bg-white/[0.03] backdrop-blur-sm rounded-[2rem] overflow-hidden border border-white/5 hover:border-white/20 hover:bg-white/[0.07] hover:shadow-2xl hover:shadow-white/5"
>
    <div class="relative aspect-[4/5] overflow-hidden bg-white/5">
        <Image
            src={image}
            alt={`Imagen del producto: ${product.name}`}
            width={400}
            height={500}
            format="webp"
            class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-1000 grayscale group-hover:grayscale-0 opacity-80 group-hover:opacity-100"
            loading={loading}
        />
        {
            product.is_offer && (
                <span class="absolute top-4 left-4 bg-white text-black text-[10px] font-black px-3 py-1 uppercase tracking-[0.2em] rounded-full shadow-xl z-20">
                    Oferta
                </span>
            )
        }
        {
            (() => {
                const s = product.stock as any;
                const qty =
                    (Array.isArray(s) ? s[0]?.quantity : s?.quantity) ?? 0;
                if (qty === 0) {
                    return (
                        <div class="absolute inset-0 bg-black/60 backdrop-blur-[2px] flex items-center justify-center z-10">
                            <span class="bg-white/10 border border-white/20 text-white text-[10px] font-black px-4 py-2 uppercase tracking-[0.3em] rounded-full">
                                Agotado
                            </span>
                        </div>
                    );
                }
                return null;
            })()
        }

        <!-- Add to Cart Floating Button -->
        <div
            class="absolute bottom-6 right-6 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 z-20"
        >
            <button
                aria-label={`AÃ±adir ${product.name} al carrito`}
                disabled={(() => {
                    const s = product.stock as any;
                    const qty =
                        (Array.isArray(s) ? s[0]?.quantity : s?.quantity) ?? 0;
                    return qty === 0;
                })()}
                class="w-12 h-12 rounded-full bg-white text-black flex items-center justify-center shadow-2xl hover:scale-110 active:scale-95 transition-all"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"
                    ></path>
                    <path d="M3 6h18"></path>
                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
            </button>
        </div>
    </div>

    <div class="p-8 space-y-4">
        <div class="space-y-1">
            {
                product.category && (
                    <p class="text-[10px] font-black uppercase tracking-[0.3em] text-white/30 group-hover:text-white/50 transition-colors">
                        {product.category.name}
                    </p>
                )
            }
            <h3
                title={product.name}
                class="text-lg font-bebas tracking-wide text-white/90 group-hover:text-white transition-colors line-clamp-1"
            >
                {product.name}
            </h3>
        </div>

        <div class="flex items-center justify-between">
            <p
                class="text-xl font-outfit font-light tracking-tighter text-white"
            >
                {formatPrice(product.price)}
            </p>
            <div
                class="w-8 h-[1px] bg-white/10 group-hover:w-12 group-hover:bg-white/30 transition-all"
            >
            </div>
        </div>
    </div>
</div>

<script>
    import { openModal } from "../../store/modalStore";

    function setupProductCards() {
        const cards = document.querySelectorAll(
            ".product-card-trigger",
        ) as NodeListOf<HTMLElement>;

        cards.forEach((card) => {
            // Remove old listeners ideally, or just robustly add new ones.
            // In vanilla JS without framework support for cleanup, we rely on page reloads/transitions.
            // But to be safe against double-binding if re-run:
            const newCard = card.cloneNode(true);
            // Actually cloning destroys event listeners but might be heavy.
            // Let's just trust that this script runs once per component instance initialization or use a data-attribute to mark initialized.

            if (card.dataset.initialized) return;
            card.dataset.initialized = "true";

            card.addEventListener("click", (e) => {
                e.preventDefault();
                const productJson = card.getAttribute("data-product");
                if (productJson) {
                    try {
                        const product = JSON.parse(productJson);
                        openModal(product);
                    } catch (err) {
                        console.error("Error parsing product data", err);
                    }
                }
            });
        });
    }

    // Run on initial load
    setupProductCards();

    // Support Astro View Transitions if enabled
    document.addEventListener("astro:page-load", setupProductCards);
</script>
