---
interface Props {
    product: {
        id: number;
        name: string;
        price: number;
        image_url?: string; // We'll handle images properly later, assuming relation or separate query
        is_offer: boolean;
        category?: {
            name: string;
            slug: string;
        };
        stock?: Array<{ quantity: number }> | { quantity: number };
    };
    loading?: "lazy" | "eager";
}

import { Image } from "astro:assets";

const { product, loading = "lazy" } = Astro.props;

// Use product image or fallback
const image =
    product.image_url ||
    "https://images.unsplash.com/photo-1620916566398-39f1143ab7be?q=80&w=800&auto=format&fit=crop";

const formatPrice = (price: number) => {
    return new Intl.NumberFormat("es-ES", {
        style: "currency",
        currency: "EUR",
    }).format(price / 100);
};
---

<div
    data-product={JSON.stringify(product)}
    class="product-card-trigger cursor-pointer group group-hover:shadow-lg transition-all duration-300 block bg-white rounded-xl overflow-hidden border border-gray-100 hover:border-gray-200"
>
    <div class="relative aspect-[3/4] overflow-hidden bg-gray-100">
        <Image
            src={image}
            alt={product.name}
            width={400}
            height={533}
            class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-500"
            loading={loading}
        />
        {
            product.is_offer && (
                <span class="absolute top-3 left-3 bg-red-600 text-white text-xs font-bold px-3 py-1 uppercase tracking-wider rounded-sm shadow-sm">
                    Oferta
                </span>
            )
        }
        {
            (() => {
                const s = product.stock as any;
                const qty =
                    (Array.isArray(s) ? s[0]?.quantity : s?.quantity) ?? 0;
                if (qty === 0) {
                    return (
                        <span class="absolute top-3 right-3 bg-gray-900/80 text-white text-[10px] font-bold px-2 py-1 uppercase tracking-widest rounded-sm backdrop-blur-sm">
                            Agotado
                        </span>
                    );
                }
                return null;
            })()
        }
        <div
            class={`absolute bottom-4 right-4 transition-transform duration-300 ${(() => {
                const s = product.stock as any;
                const qty =
                    (Array.isArray(s) ? s[0]?.quantity : s?.quantity) ?? 0;
                return qty === 0
                    ? "translate-y-0"
                    : "translate-y-12 group-hover:translate-y-0";
            })()}`}
        >
            <button
                disabled={(() => {
                    const s = product.stock as any;
                    const qty =
                        (Array.isArray(s) ? s[0]?.quantity : s?.quantity) ?? 0;
                    return qty === 0;
                })()}
                class={`p-3 rounded-full shadow-lg transition-colors ${(() => {
                    const s = product.stock as any;
                    const qty =
                        (Array.isArray(s) ? s[0]?.quantity : s?.quantity) ?? 0;
                    return qty === 0
                        ? "bg-gray-200 text-gray-400 cursor-not-allowed"
                        : "bg-white text-black hover:bg-black hover:text-white";
                })()}`}
            >
                {
                    (() => {
                        const s = product.stock as any;
                        const qty =
                            (Array.isArray(s) ? s[0]?.quantity : s?.quantity) ??
                            0;
                        if (qty === 0) {
                            return (
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <line x1="18" y1="6" x2="6" y2="18" />
                                    <line x1="6" y1="6" x2="18" y2="18" />
                                </svg>
                            );
                        }
                        return (
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="20"
                                height="20"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z" />
                                <path d="M3 6h18" />
                                <path d="M16 10a4 4 0 0 1-8 0" />
                            </svg>
                        );
                    })()
                }
            </button>
        </div>
    </div>
    <div class="p-4">
        {
            product.category && (
                <p class="text-xs text-gray-500 mb-1">
                    {product.category.name}
                </p>
            )
        }
        <h3
            class="font-medium text-gray-900 group-hover:text-indigo-600 transition-colors mb-2 line-clamp-1"
        >
            {product.name}
        </h3>
        <p class="font-bold text-gray-900">{formatPrice(product.price)}</p>
    </div>
</div>

<script>
    import { openModal } from "../../store/modalStore";

    function setupProductCards() {
        const cards = document.querySelectorAll(
            ".product-card-trigger",
        ) as NodeListOf<HTMLElement>;

        cards.forEach((card) => {
            // Remove old listeners ideally, or just robustly add new ones.
            // In vanilla JS without framework support for cleanup, we rely on page reloads/transitions.
            // But to be safe against double-binding if re-run:
            const newCard = card.cloneNode(true);
            // Actually cloning destroys event listeners but might be heavy.
            // Let's just trust that this script runs once per component instance initialization or use a data-attribute to mark initialized.

            if (card.dataset.initialized) return;
            card.dataset.initialized = "true";

            card.addEventListener("click", (e) => {
                e.preventDefault();
                const productJson = card.getAttribute("data-product");
                if (productJson) {
                    try {
                        const product = JSON.parse(productJson);
                        openModal(product);
                    } catch (err) {
                        console.error("Error parsing product data", err);
                    }
                }
            });
        });
    }

    // Run on initial load
    setupProductCards();

    // Support Astro View Transitions if enabled
    document.addEventListener("astro:page-load", setupProductCards);
</script>
