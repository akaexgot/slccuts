---
export const prerender = false;

import AdminLayout from "../../../layouts/AdminLayout.astro";
import { supabase } from "../../../lib/supabase";

// Fetch categories for dropdown
const { data: categories } = await supabase
    .from("categories")
    .select("*")
    .order("name");

let error = "";
let success = false;

// Handle form submission
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();

    const name = formData.get("name") as string;
    const slug = formData.get("slug") as string;
    const description = formData.get("description") as string;
    const price = parseFloat(formData.get("price") as string) * 100; // Convert to cents
    const categoryId = formData.get("category_id") as string;
    const imageUrl = formData.get("image_url") as string;
    const isOffer = formData.get("is_offer") === "on";
    const active = formData.get("active") === "on";
    const stock = parseInt(formData.get("stock") as string) || 0;

    // Insert product
    const { data: newProduct, error: insertError } = await supabase
        .from("products")
        .insert({
            name,
            slug,
            description,
            price,
            category_id: categoryId || null,
            is_offer: isOffer,
            active,
        })
        .select()
        .single();

    if (insertError) {
        error = insertError.message;
    } else if (newProduct && imageUrl) {
        // Insert product image
        await supabase.from("product_images").insert({
            product_id: newProduct.id,
            image_url: imageUrl,
        });

        // Upsert stock entry (trigger might have created it already)
        await supabase.from("stock").upsert({
            product_id: newProduct.id,
            quantity: stock,
        });

        return Astro.redirect("/admin/products");
    } else if (newProduct) {
        return Astro.redirect("/admin/products");
    }
}
