---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { supabase } from "../../../lib/supabase";

export const prerender = false;

// Fetch subscribers
const { data: subscribers, error } = await supabase
    .from("newsletter_subscribers")
    .select("*")
    .order("created_at", { ascending: false });

// Fetch settings
const { data: settings } = await supabase.from("settings").select("*");

const newsletterEnabled =
    settings?.find((s) => s.key === "newsletter_enabled")?.value ?? true;

const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString("es-ES", {
        day: "2-digit",
        month: "short",
        year: "numeric",
        hour: "2-digit",
        minute: "2-digit",
    });
};
---

<AdminLayout title="Newsletter" activeSection="newsletter">
    <div
        class="flex flex-col xl:flex-row justify-between items-start gap-8 mb-10"
    >
        <div>
            <h1 class="text-4xl font-black text-white tracking-tight mb-2">
                Gesti칩n de <span class="text-white/40 italic">Newsletter</span>
            </h1>
            <p class="text-gray-500 font-medium text-sm lg:text-base">
                Administra tus suscriptores y env칤a campa침as personalizadas
            </p>
        </div>

        <div
            class="flex items-center gap-4 p-4 bg-gray-900/50 backdrop-blur-xl rounded-2xl border border-white/5 shadow-2xl"
        >
            <span
                class="text-[10px] font-black text-gray-500 uppercase tracking-widest pl-2"
                >Estado del Popup</span
            >
            <button
                id="toggleNewsletter"
                data-enabled={newsletterEnabled}
                class={`h-10 px-6 rounded-xl text-[10px] font-black uppercase tracking-widest transition-all ${
                    newsletterEnabled
                        ? "bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 hover:bg-emerald-500/20"
                        : "bg-red-500/10 text-red-400 border border-red-500/20 hover:bg-red-500/20"
                }`}
            >
                {newsletterEnabled ? "Activo" : "Desactivado"}
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
        <!-- Campaign Editor -->
        <div class="xl:col-span-2 space-y-8">
            <div
                class="p-8 bg-gray-900/50 backdrop-blur-xl rounded-[2.5rem] border border-white/5 shadow-2xl"
            >
                <div class="flex items-center gap-3 mb-8">
                    <span class="text-2xl">游닎</span>
                    <h2 class="text-xl font-black text-white italic uppercase">
                        Nueva Campa침a
                    </h2>
                </div>

                <form id="campaignForm" class="space-y-6">
                    <div>
                        <label
                            class="block text-[10px] font-black text-gray-500 uppercase tracking-widest mb-3"
                            >Asunto del correo</label
                        >
                        <input
                            type="text"
                            id="campaignSubject"
                            required
                            placeholder="Ej: 춰Nuevos productos disponibles en SLC CUTS!"
                            class="w-full h-14 bg-black/40 border border-white/10 rounded-2xl px-6 text-sm font-bold text-white focus:border-white/20 focus:outline-none transition-all"
                        />
                    </div>

                    <div>
                        <label
                            class="block text-[10px] font-black text-gray-500 uppercase tracking-widest mb-3"
                            >Contenido (HTML permitido)</label
                        >
                        <textarea
                            id="campaignContent"
                            required
                            rows="12"
                            placeholder="Escribe el mensaje para tus clientes..."
                            class="w-full bg-black/40 border border-white/10 rounded-2xl p-6 text-sm font-medium text-white focus:border-white/20 focus:outline-none transition-all resize-none"
                        ></textarea>
                    </div>

                    <div class="pt-4">
                        <button
                            type="submit"
                            id="sendCampaignBtn"
                            class="w-full h-16 bg-white text-black rounded-2xl text-[11px] font-black uppercase tracking-widest hover:scale-[1.01] active:scale-[0.99] transition-all shadow-2xl flex items-center justify-center gap-3"
                        >
                            <span
                                >Enviar a {subscribers?.length || 0} suscriptores</span
                            >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><line x1="22" y1="2" x2="11" y2="13"
                                ></line><polyline
                                    points="22 2 15 22 11 13 2 9 22 2"
                                ></polyline></svg
                            >
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Subscribers List -->
        <div class="space-y-8">
            <div
                class="p-8 bg-gray-900/50 backdrop-blur-xl rounded-[2.5rem] border border-white/5 shadow-2xl max-h-[800px] flex flex-col"
            >
                <div class="flex items-center justify-between mb-8 shrink-0">
                    <div class="flex items-center gap-3">
                        <span class="text-2xl">游논</span>
                        <h2
                            class="text-xl font-black text-white italic uppercase"
                        >
                            Suscriptores
                        </h2>
                    </div>
                    <span
                        class="px-3 py-1 bg-white/5 rounded-full text-[10px] font-black text-white"
                    >
                        {subscribers?.length || 0}
                    </span>
                </div>

                <div class="overflow-y-auto pr-2 custom-scrollbar space-y-4">
                    {
                        subscribers?.map((sub: any) => (
                            <div class="p-4 bg-white/5 rounded-2xl border border-white/5 flex flex-col gap-1 group relative">
                                <button
                                    class="delete-subscriber absolute top-4 right-4 opacity-0 group-hover:opacity-100 p-1 text-gray-500 hover:text-red-400 transition-all"
                                    data-id={sub.id}
                                    title="Eliminar suscriptor"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="14"
                                        height="14"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="3"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <>
                                            <path d="M3 6h18" />
                                            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
                                            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
                                        </>
                                    </svg>
                                </button>
                                <span class="text-xs font-black text-white truncate pr-6">
                                    {sub.email}
                                </span>
                                <span class="text-[9px] font-bold text-gray-600 uppercase tracking-widest">
                                    {formatDate(sub.created_at)}
                                </span>
                            </div>
                        ))
                    }

                    {
                        (!subscribers || subscribers.length === 0) && (
                            <div class="text-center py-10 opacity-30">
                                <span class="text-4xl block mb-4">游닔</span>
                                <p class="text-[10px] font-black uppercase tracking-widest">
                                    Sin suscriptores a칰n
                                </p>
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
    </div>
</AdminLayout>

<script>
    import { supabase } from "../../../lib/supabase";

    // Toggle Newsletter
    const toggleBtn = document.getElementById("toggleNewsletter");
    toggleBtn?.addEventListener("click", async () => {
        const currentStatus = toggleBtn.getAttribute("data-enabled") === "true";
        const newStatus = !currentStatus;

        const { error } = await supabase
            .from("settings")
            .upsert({ key: "newsletter_enabled", value: newStatus });

        if (!error) {
            location.reload();
        } else {
            console.error(error);
            (window as any).showToast(
                "Error",
                "No se pudo cambiar el estado",
                "error",
            );
        }
    });

    // Delete Subscriber
    document.querySelectorAll(".delete-subscriber").forEach((btn) => {
        btn.addEventListener("click", async () => {
            if (
                !confirm(
                    "쮼st치s seguro de que quieres eliminar este suscriptor?",
                )
            )
                return;

            const id = btn.getAttribute("data-id");
            const { error } = await supabase
                .from("newsletter_subscribers")
                .delete()
                .eq("id", id);

            if (!error) {
                location.reload();
            } else {
                (window as any).showToast(
                    "Error",
                    "No se pudo eliminar el suscriptor",
                    "error",
                );
            }
        });
    });

    // Send Campaign
    const campaignForm = document.getElementById(
        "campaignForm",
    ) as HTMLFormElement;
    const sendBtn = document.getElementById("sendCampaignBtn");

    campaignForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const subject = (
            document.getElementById("campaignSubject") as HTMLInputElement
        ).value;
        const content = (
            document.getElementById("campaignContent") as HTMLTextAreaElement
        ).value;

        if (!sendBtn) return;
        sendBtn.innerHTML = "Enviando...";
        (sendBtn as HTMLButtonElement).disabled = true;

        try {
            const response = await fetch("/api/newsletter/send-campaign", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ subject, content }),
            });

            if (response.ok) {
                (window as any).showToast(
                    "칄xito",
                    "Campa침a enviada correctamente",
                    "success",
                );
                campaignForm.reset();
            } else {
                throw new Error("Fall칩 el env칤o");
            }
        } catch (error) {
            (window as any).showToast(
                "Error",
                "Hubo un problema al enviar la campa침a",
                "error",
            );
        } finally {
            sendBtn.innerHTML = "Enviar a suscriptores";
            (sendBtn as HTMLButtonElement).disabled = false;
        }
    });
</script>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.2);
    }
</style>
