                                        Ãšltima actividad:{" "}
                                        {formatDate(user.last_cart_update)}
                                    </p>
                                </div>
                            </div>

                            <div class="flex-1">
                                <ul class="flex flex-wrap gap-2">
                                    {cartItems.map((item: any) => (
                                        <li class="px-3 py-1.5 bg-white/5 border border-white/5 rounded-lg text-[10px] font-bold text-gray-400">
                                            {item.quantity}x {item.name}
                                        </li>
                                    ))}
                                </ul>
                            </div>

                            <div class="text-right flex flex-col items-center lg:items-end gap-3 min-w-[150px]">
                                <div>
                                    <p class="text-gray-600 text-[9px] font-black uppercase tracking-widest leading-none mb-1">
                                        Valor Total
                                    </p>
                                    <p class="text-2xl font-black text-white italic">
                                        {formatPrice(total)}
                                    </p>
                                </div>
                                <button
                                    data-email={user.email}
                                    data-first-name={
                                        user.first_name || "Cliente"
                                    }
                                    data-cart={JSON.stringify(cartItems)}
                                    class="recover-btn w-full bg-indigo-600 hover:bg-indigo-500 text-white font-black uppercase text-[10px] tracking-widest px-6 py-3 rounded-xl transition-all shadow-lg hover:shadow-indigo-500/20 active:scale-95"
                                >
                                    Enviar Recordatorio
                                </button>
                            </div>
                        </div>
                    );
                })
            )
        }
    </div>

    <script>
        document.querySelectorAll(".recover-btn").forEach((btn) => {
            btn.addEventListener("click", async () => {
                const target = btn as HTMLButtonElement;
                const email = target.dataset.email;
                const firstName = target.dataset.firstName;
                const cart = JSON.parse(target.dataset.cart || "[]");

                target.disabled = true;
                target.innerText = "ENVIANDO...";

                try {
                    const response = await fetch("/api/emails/send", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({
                            to: email,
