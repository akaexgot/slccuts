                </div>
            ) : (
                usersWithCarts?.map((user) => {
                    const cartItems = user.cart_items || [];
                    const total = cartItems.reduce(
                        (acc: number, item: any) =>
                            acc + item.price * item.quantity,
                        0,
                    );

                    return (
                        <div class="group relative bg-[#0f1117] hover:bg-[#141721] rounded-3xl border border-white/[0.03] transition-all duration-300 p-8 flex flex-col lg:flex-row items-center justify-between gap-8">
