---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

export const prerender = false;

// 1. Fetch users with items in their cart
const { data: usersWithCarts, error } = await supabase
    .from("users")
    .select("*")
    .not("cart_items", "is", null)
    .order("last_cart_update", { ascending: false });

const formatPrice = (price: number) => {
    return new Intl.NumberFormat("es-ES", {
        style: "currency",
        currency: "EUR",
    }).format(price / 100);
};

const formatDate = (dateString: string) => {
    if (!dateString) return "Nunca";
    return new Date(dateString).toLocaleDateString("es-ES", {
        day: "2-digit",
        month: "short",
        hour: "2-digit",
        minute: "2-digit",
    });
};
---

<AdminLayout title="Engagement" activeSection="engagement">
    <div class="mb-10">
        <h1
            class="text-4xl font-black text-white tracking-tight mb-2 uppercase italic"
        >
            Marketing & <span class="text-white/40">RecuperaciÃ³n</span>
        </h1>
        <p
            class="text-gray-500 font-medium uppercase tracking-widest text-[10px]"
        >
            Usuarios registrados que han dejado productos en su carrito
        </p>
    </div>

    <div class="grid gap-6">
        {
            usersWithCarts?.length === 0 ? (
