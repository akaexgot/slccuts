---

<Layout title="Servicios | SLC CUTS">
    <div
        class="hidden md:block relative bg-black text-white py-12 px-4 text-center overflow-hidden"
    >
        <!-- Mosaic Background -->
        <MosaicBackground mode="dark" opacity="opacity-10" />

        <div class="relative z-10">
            <h1 class="text-5xl font-bold uppercase tracking-widest mb-4">
                Nuestros Servicios
            </h1>
            <p class="text-gray-400">Estilo Cl√°sico & Moderno</p>
        </div>
    </div>

    <!-- Reduced padding on mobile to maximize screen space -->
    <div class="container mx-auto px-4 py-4 md:py-8 max-w-6xl">
        <div
            class="bg-black border border-white/10 overflow-hidden rounded-[1.5rem] md:rounded-[2.5rem]"
        >
            <!-- Embedded Iframe (Visible on Mobile & Desktop) -->
            <div class="bg-black w-full">
                <!-- Height increased on mobile to ensure full booking flow and footer visibility -->
                <iframe
                    src="https://slccuts.setmore.com/"
                    width="100%"
                    height="1000"
                    frameborder="0"
                    scrolling="yes"
                    class="w-full h-[75vh] md:h-[800px]"
                    style="filter: invert(0);"
                    title="Reservar Cita"></iframe>
            </div>
        </div>
    </div>
</Layout>
