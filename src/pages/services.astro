---
import Layout from "../layouts/Layout.astro";
import MosaicBackground from "../components/ui/MosaicBackground.astro";
---

<Layout title="Servicios | SLC CUTS">
    <div
        class="relative bg-black text-white py-20 px-4 text-center overflow-hidden"
    >
        <!-- Mosaic Background -->
        <MosaicBackground mode="dark" opacity="opacity-10" />

        <div class="relative z-10">
            <h1 class="text-5xl font-bold uppercase tracking-widest mb-4">
                Nuestros Servicios
            </h1>
            <p class="text-gray-400">Estilo Cl√°sico & Moderno</p>
        </div>
    </div>

    <div class="container mx-auto px-4 py-12 max-w-6xl">
        <div
            class="bg-white rounded-[2.5rem] shadow-2xl border border-gray-100 min-h-[1500px]"
        >
            <iframe
                src="https://slccuts.setmore.com/"
                width="100%"
                height="1800"
                frameborder="0"
                scrolling="no"
                class="w-full min-h-[1600px] md:min-h-[1800px] rounded-[2.5rem]"
            ></iframe>
        </div>
    </div>
</Layout>
